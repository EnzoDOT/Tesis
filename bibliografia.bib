keywords = {diffuse optical tomography,inverse transport problems,level set regularization,nonlinear Kaczmarz,radiative transfer equation,sparsity promoting regularization},
number = {1},
publisher = {IOP Publishing},
title = {{Sparsity and level set regularization for diffuse optical tomography using a transport model in 2D}},
volume = {33},
