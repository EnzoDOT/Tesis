file = {:home/enzo/Escritorio/papers{\_}ed/spence2015.pdf:pdf},
issn = {10902716},
journal = {Journal of Computational Physics},
keywords = {Discrete ordinates,Non-classical quadrature,Numerical integration,Octant-range,Orthogonal polynomial,Particle transport,QR set,QRS set},
pages = {25--57},
publisher = {Elsevier Inc.},
